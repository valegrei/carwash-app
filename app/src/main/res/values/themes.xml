<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarwashApp" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- You can customize it by changing statusBarColor. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CarwashApp.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CarwashApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CarwashApp.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="Theme.CarwashApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.CarwashApp.LogoTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CarwashApp.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CarwashApp.TitlePrimary" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelWhite" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01785714</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelError" parent="TextAppearance.CarwashApp.LabelWhite">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelError2" parent="TextAppearance.CarwashApp.LabelWhite">
        <item name="android:textColor">@color/error2</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelPrimary" parent="TextAppearance.CarwashApp.LabelWhite">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelPrimarySemiBold" parent="TextAppearance.CarwashApp.LabelPrimary">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelAccent" parent="TextAppearance.CarwashApp.LabelWhite">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelBlack" parent="TextAppearance.CarwashApp.LabelWhite">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.CarwashApp.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.CarwashApp.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>


    <style name="TextAppearance.CarwashApp.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.CarwashApp.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <style name="Theme.CarwashApp.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/purple</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.CarwashApp.NoActionBar</item>
    </style>

    <style name="ThemeOverlay.CarwashApp.Switch" parent="">
        <item name="colorPrimary">@color/green_light</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="ThemeOverlay.CarwashApp.Button" parent="">
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="ThemeOverlay.CarwashApp.ButtonCancel" parent="">
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="RoundedTextImputLayaout">

    </style>

    <style name="Style.CarwashApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CarwashApp.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.CarwashApp.BodyLarge</item>
    </style>

    <style name="Style.CarwashApp.TextInputLayout.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CarwashApp.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.CarwashApp.BodyLarge</item>
    </style>

    <style name="ShapeAppearance.CarwashApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <!--this makes the 10 dp of cut corners of the MDC EditText-->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.CarwashApp">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:colorBackground">@color/bg_color</item>
    </style>

    <style name="ThemeOverlay.CarwashApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>