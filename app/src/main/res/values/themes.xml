<resources>
    <!-- Base application theme. -->
    <style name="Theme.CarwashApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/aquamarina</item>
        <item name="colorAccent">@color/blue</item>
        <!-- You can customize it by changing statusBarColor. -->
        <item name="android:statusBarColor">@color/aquamarina</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CarwashApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CarwashApp.NoActionBarNoStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.CarwashApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CarwashApp.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="Theme.CarwashApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.CarwashApp.LogoTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CarwashApp.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CarwashApp.LabelWhite" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01785714</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CarwashApp.RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/rounded_button_states</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>
</resources>