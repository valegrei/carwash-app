<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="pe.com.valegrei.carwashapp.ui.login.LoginFragment"
        android:label="@string/login_label"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_recoverFragment"
            app:destination="@id/recoverFragment" />
        <action
            android:id="@+id/action_loginFragment_to_verifyFragment"
            app:destination="@id/verifyFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="pe.com.valegrei.carwashapp.ui.register.RegisterFragment"
        android:label="@string/register_label"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_verifyFragment"
            app:destination="@id/verifyFragment" />
    </fragment>
    <fragment
        android:id="@+id/recoverFragment"
        android:name="pe.com.valegrei.carwashapp.ui.recover.RecoverFragment"
        android:label="@string/recover_label"
        tools:layout="@layout/fragment_recover">
        <action
            android:id="@+id/action_recoverFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPasswordFragment"
        android:name="pe.com.valegrei.carwashapp.ui.new_password.NewPasswordFragment"
        android:label="@string/new_pass_label"
        tools:layout="@layout/fragment_new_password" >
        <argument
            android:name="correo"
            app:argType="string" />
        <action
            android:id="@+id/action_newPasswordFragment_to_verifyFragment"
            app:destination="@id/verifyFragment" />
        <action
            android:id="@+id/action_newPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyFragment"
        android:name="pe.com.valegrei.carwashapp.ui.verify.VerifyFragment"
        android:label="fragment_verify"
        tools:layout="@layout/fragment_verify">
        <argument
            android:name="idUsuario"
            app:argType="integer" />
        <argument
            android:name="correo"
            app:argType="string" />
        <action
            android:id="@+id/action_verifyFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>