<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="reserva"
            type="pe.com.carwashperuapp.carwashapp.model.Reserva1" />
    </data>


    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/min_margin"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/small_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/small_margin"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/min_margin"
                android:text="@{reserva.client}"
                android:textAppearance="@style/TextAppearance.CarwashApp.LabelPrimarySemiBold"
                tools:text="Víctor Alegre Ibáñez" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{reserva.hora}"
                android:layout_marginStart="@dimen/small_margin"
                android:textAppearance="@style/TextAppearance.CarwashApp.LabelPrimarySemiBold"
                tools:text="11:00" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>