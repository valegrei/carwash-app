<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.register.RegisterFragment">

    <data>
        <import type="android.view.View"/>
        <variable
            name="registerFragment"
            type="pe.com.valegrei.carwashapp.ui.register.RegisterFragment" />
        <variable
            name="viewModel"
            type="pe.com.valegrei.carwashapp.ui.register.RegisterViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ly_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconContentDescription="@string/register_email"
                app:startIconDrawable="@drawable/ic_outline_account_circle_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/register_email"
                    android:inputType="textEmailAddress"
                    tools:ignore="TextContrastCheck"
                    tools:text="example@gmail.com" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="password_toggle"
                app:startIconContentDescription="@string/register_password"
                app:startIconDrawable="@drawable/ic_outline_lock_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/register_password"
                    android:inputType="textPassword"
                    tools:ignore="TextContrastCheck"
                    tools:text="123456789" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="password_toggle"
                app:startIconContentDescription="@string/register_repeat_password"
                app:startIconDrawable="@drawable/ic_outline_lock_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/register_repeat_password"
                    android:inputType="textPassword"
                    tools:ignore="TextContrastCheck"
                    tools:text="123456789" />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checked="@{viewModel.isDistrib()}"
                android:onClick="@{() -> viewModel.setIsDistrib(!viewModel.isDistrib)}"
                android:text="@string/register_check_dis" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.isDistrib() ? View.VISIBLE : View.GONE}">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_razon_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_razon_social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/my_data_razon_social"
                        android:inputType="text"
                        tools:ignore="TextContrastCheck"
                        tools:text="Lavados de Carros Santa Rosa" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_ruc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ruc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/my_data_ruc"
                        android:inputType="number"
                        tools:ignore="TextContrastCheck"
                        tools:text="10709582864" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_cellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:startIconContentDescription="@string/my_data_cellphone"
                    app:startIconDrawable="@drawable/ic_outline_phone_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_cellphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/my_data_cellphone"
                        android:inputType="phone"
                        tools:ignore="TextContrastCheck"
                        tools:text="925416855" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:startIconContentDescription="@string/my_data_whatsapp"
                    app:startIconDrawable="@drawable/ic_whatsapp_outlined">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/my_data_whatsapp"
                        android:inputType="textEmailAddress"
                        tools:ignore="TextContrastCheck"
                        tools:text="958412963" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:onClick="@{()->registerFragment.goMain()}"
                android:text="@string/register_next" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</layout>