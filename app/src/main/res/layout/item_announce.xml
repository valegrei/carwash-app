<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="anuncio"
            type="pe.com.valegrei.carwashapp.database.anuncio.Anuncio" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_anuncio"
        app:cardCornerRadius="0dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:cardBackgroundColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pe.com.valegrei.carwashapp.ui.SquareFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                imageUrl="@{anuncio.getUrlArchivo()}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/announc_img_descr"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/car" />

        </pe.com.valegrei.carwashapp.ui.SquareFrameLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>